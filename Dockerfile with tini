# djaydev/autoconvert

FROM lsiobase/ubuntu:bionic
RUN apt update && \
apt install --no-install-recommends wget && \
wget https://github.com/krallin/tini/releases/download/v0.18.0/tini_0.18.0-amd64.deb && \
apt install --no-install-recommends python-pip python-setuptools mediainfo ./tini_0.18.0-amd64.deb libfreetype6 libc6 libutf8proc2 libtesseract4 libpng16-16 liblept5 pkgconf libva2 libva-drm2 expat libgomp1 -y && \
# cleanup
apt remove wget && \
apt-get autoremove -y && \
apt-get clean && \
rm -rf \
  /tmp/* \
  /var/lib/apt/lists/* \
  /var/tmp/* tini_0.18.0-amd64.deb

RUN pip install watchdog --install-option="--install-scripts=/usr/bin"

# Copy ccextractor
COPY --from=djaydev/ccextractor:latest /usr/local/bin /usr/local/bin
# Copy ffmpeg
COPY --from=jellyfin/ffmpeg:latest /usr/local /usr/local/

# Copy the start script.
COPY startapp.sh /startapp.sh
RUN chmod +x /startapp.sh

ENTRYPOINT ["/usr/bin/tini", "--"]

CMD ["/startapp.sh"]
